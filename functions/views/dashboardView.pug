doctype html
html 
    head
        meta(charset='UTF-8')
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Proyecto Terminal
        link(href="/css/styles.css" rel="stylesheet")
        link(href="/css/styles-forms.css" rel="stylesheet")
        link(href="/css/styles-footer.css" rel="stylesheet")
        link(href="/css/styles-nav.css" rel="stylesheet")
    body 
        header.header
            nav.nav 
                .nav-logo-ipn
                    img(src="/img/Escudo-IPN.png" alt="IPN" title="Instituto Politécnico Nacional")
                button.nav-toggle
                    svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16")
                        path(fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5")

                ul.nav-menu
                    li 
                        a(href="/") Inicio 
                    if esAdmin == 1
                        li 
                            a(href="/user/adminActions") Administrar
                    li
                        a(href="./log-in/mySession")
                            svg(xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16")
                                path(d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0")
                                path(fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1")
                    li 
                        a(href="/user/log-out") Cerrar sesion 
                .nav-logo-upiita
                    img(src="/img/Escudo-UPIITA.png" alt="UPIITA" title="Unidad Profesional Interdisciplinaria en Ingeniería y Tecnologías Avanzadas")

        main 
            //.external-container
                .internal-container 
                    h1 Bienvenido #{usuario} 
                    h2 Mediciones:
                        if listMediciones.length 
                            each medicion, index in listMediciones
                                div
                                    span.medicion-info
                                        p= "Medicion: "+medicion.idMedicion + " Nodo: "+medicion.idNodo + " Hora: "+medicion.hora+" temperatura: "+medicion.temp+" humedad: "+medicion.humedad+" nitrogeno: "+medicion.n+" potasio: "+medicion.p+" fosoforo: "+medicion.k  
                                    
                        else
                            p No hay mediciones disponibles

                    h2 Suministros:
                        if listSuministros.length 
                            each suministro, index in listSuministros
                                div
                                    span.suministro-info
                                        p= "Suministro: " +suministro.idSuministro + " Nodo: "+ suministro.idNodo + " Hora: "+suministro.hora+" Tipo: "+suministro.tipo+ "Usuario ejecutor:" + suministro.idUsuario_ejecutor
                                    
                        else
                            p No hay suministros disponibles
            .external-container 
            h2 Bienvenido #{userName} 
            .external-container
                h2 Nodos

                    if listaNodos.length 
                        each nodo, index in listaNodos
                            div
                                if nodo.idNodo==1
                                    .internal-container
                                        a(action="log-in/myNode/1", href="log-in/myNode/1")
                                            img(src="/img/carrots.jpg" alt="Zanahoria" title="Zanahoria")
                                                
                                else if nodo.idNodo==2
                                    .internal-container 
                                        a(action="log-in/myNode/2", href="log-in/myNode/2")
                                            img(src="/img/spinach.png" alt="Espinaca" title="Espinaca")
                                else if nodo.idNodo==3
                                    .internal-container 
                                        a(action="log-in/myNode/3", href="log-in/myNode/3")
                                            img(src="/img/lettuce.jpg" alt="Lechuga" title="Lechuga")
                                else if nodo.idNodo==4
                                    .internal-container 
                                        a(action="log-in/myNode/4", href="log-in/myNode/4")
                                            img(src="/img/tomate.png" alt="Jitomate" title="Jitomate")
                    else
                        p No hay nodos disponibles

            //.external-container 
                h1 Bienvenido a tu huerto #{usuario} 
                .internal.container 
                    input(type="button" value="Zanahorias")
                        a(href="/log-in/myNode")
                            img(src="/img/carrots.jpg" alt="Zanahoria" title="Zanahoria")
                .internal.container 
                    a(href="/log-in/myNode")
                        img(src="/img/spinach.png" alt="Espinaca" title="Espinaca")
                .internal.container 
                    a(href="/log-in/myNode")
                        img(src="/img/lettuce.jpg" alt="Lechuga" title="Lechuga")
                .internal.container 
                    a(href="/log-in/myNode")
                        img(src="/img/tomate.png" alt="Jitomate" title="Jitomate")
        footer.footer 
            .footer-group1
                .footer-box-1
                    p#footer-paragraph-1 Sistema telemático  para el monitoreo y control de huertos urbanos basado en una red inalámbrica de sensores
                    p#footer-paragraph-2 Proyecto de titulación
                    hr
                    p Presentado por: 
                    p Benitez Quiroz Karla Denisse 
                    p Gallegos Salinas Emilio
                .footer-box-2
                    p GitHub
                    hr
                    .footer-icon
                        a(href="https://github.com/EmilioGS/WSN-PT" target="_blank")
